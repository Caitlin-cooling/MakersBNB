  <input type="hidden" name="user_id" value="<%= @current_user.id %>" >
  <input type="hidden" name="posting_id" value="<%= @post.id %>" >
  <input id='confirm_booking' class='custom_button' type="submit" value="Submit Booking" >
</form>
